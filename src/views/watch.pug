extends base.pug

block scripts
  script(src="/static/js/videoPlayer.js", defer)

block content 
  div#videoContainer(data-video-id=video.id)
    video(src="/" + video.fileUrl, width="700") 
    div#videoControls
      div
          input#timeline(type="range", min=0, step=1, value=0)
      button#play 
        i.playIcon(class="fas fa-play fa-lg")
        i.pauseIcon(class="fas fa-pause fa-lg")
      button#mute 
        i.muteIcon(class="fas fa-volume-mute fa-lg")
        i.unMuteIcon(class="fas fa-volume-up fa-lg")
      input#volume(type="range", min=0, max=1, step=0.1)
      div
        span#currentTime 0:00
        span  / 
        span#totalTime 0:00
      div 
        button#fullscreen 
          i.expandIcon(class="fas fa-expand fa-lg")
          i.compressIcon(class="fas fa-compress fa-lg")

