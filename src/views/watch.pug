extends base.pug

block content 
  video(src="/" + video.fileUrl, width="700", controls) 
  div  
    p=video.description
    small=video.createdAt
    ul 
      each hashtag in video.hashtags 
        li=hashtag
    hr
  ul
    li
      a(href=`./${video.id}/edit`) Edit Video ➤
    li
      a(href=`./${video.id}/delete`) Delete Video ➤