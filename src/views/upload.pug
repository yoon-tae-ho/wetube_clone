extends base.pug

block content 
  if errorMessage 
    h3=errorMessage
  form(method="POST", enctype="multipart/form-data") 
    label(for="video")  Choose a video to upload 
    input(name="video", type="file", id="video", accept="video/*", required)
    input(name="title", type="text", placeholder="Title", required, maxLength=80)
    input(name="description", type="text", placeholder="Description", required, minLength=20)
    input(name="hashtags", type="text", placeholder="Hashtags, separated by comma.", required)
    input(type="submit" value="Upload Video")