header 
  a(href="/").header__logo
    i.fab.fa-youtube
  nav 
    ul 
      li 
        a(href="/search")
          i.fas.fa-search
      if loggedIn 
        li 
          a(href="/videos/upload") Upload
        li 
          a(href="/users/logout") Logout
        li 
          a(href="/users/edit") Edit-Profile
        li 
          a(href=`/users/${loggedInUser.username}`) 
            if loggedInUser.avatarUrl && loggedInUser.avatarUrl !== ""
              img.header__avatar(src=loggedInUser.avatarUrl.startsWith("http") ? loggedInUser.avatarUrl : "/" + loggedInUser.avatarUrl)
            else 
              img.header__avatar(src=alternativeAvatarUrl)
      else
        li 
          a(href="/login") Login
        li 
          a(href="/join").header__btn Join